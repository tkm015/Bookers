<div class="delete_text">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<div class="index_body">
<h2 class="index_title">Books</h1>
  <div class="clearfix">
  <h4 class="index_title2">Title</h4>
  <h4 class="index_title3">Body</h4>
  </div>
<%  @books.each do |book| %>
  <table>
  	<tr>
  		<th width="25%"><%= book.title %></th>
  		<th width="50%"><%= book.body %></th>
  		<th width="25%"><%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%=link_to "Destroy", destroy_book_path(book.id), method: :delete, data: { confirm: 'Are you sure?？' } %></th>
  	</tr>
  </table>
<% end %>
</div>
</div>
<div class="index_new">
<h2 class="index_title4">New book</h2>
<%= form_for(@book, url: '/books') do |f| %>
<% if @book.errors.any? %>
　　<p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
    <br>
	<%= f.submit 'Create Book' %>
<% end %>
</div>

