<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>Books</h1>
<% @books.each do |book| %>
  <table width="800" >
  	<tr>
  		<th width="25%">Title</th>
  		<th width="50%">Body</th>
  		<th width="25%">     </th>
  	</tr>
  	<tr align="left">
  	    <td><%= book.title %></td>
  	    <td><%= book.body %></td>
  	    <td><%= link_to "Show", booklist_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%=link_to "Destroy", destroy_book_path(book.id), method: :delete, data: { confirm: 'Are you sure?？' } %>
  	    </td>
  	</tr>
  </table>
<% end %>

<h2>New book</h2>
<%= form_for(@book, url: '/books') do |f| %>
<% if @book.errors.any? %>
　　<p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
    <br>
	<%= f.submit 'Create Book' %>
<% end %>