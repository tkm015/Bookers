<h2>Books</h1>
<% @books.each do |book| %>
  <table width="500px" >
  	<tr>
  		<th>Title</th>
  		<th>Body</th>
  		<th>     </th>
  	</tr>
  	<tr>
  	    <th><%= book.title %></th>
  	    <th><%= book.body %></th>
  	    <th>
  	    </th>
  	</tr>
  </table>
<% end %>


<h2>New book</h2>
<%= form_for(@book, url: '/books') do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
    <br>
	<%= f.submit 'Create Book' %>
<% end %>